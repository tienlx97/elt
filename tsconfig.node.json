{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@common/*": ["./src/common/*"],
      "@features/*": ["./src/features/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true
  }
}
